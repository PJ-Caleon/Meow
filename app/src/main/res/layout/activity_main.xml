<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/editButton"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#673AB7"
            android:text="✏️"
            android:textColor="@android:color/white" />

        <!-- Section Containers -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/window"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/section_sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="St. Joseph Hall"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/text"
                android:paddingBottom="8dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:id="@+id/container_sj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/window"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/section_migs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="St. Miguel Hall"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/text"
                android:paddingBottom="8dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:id="@+id/container_migs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/window"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/section_vel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Velasco Hall"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/text"
                android:paddingBottom="8dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:id="@+id/container_vel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/window"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/section_cads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C.A.D.S."
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/text"
                android:paddingBottom="8dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:id="@+id/container_cads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/window"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/section_ls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="St. La Salle Hall"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/text"
                android:paddingBottom="8dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:id="@+id/container_ls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>

        <!-- Selected Items Display -->
        <TextView
            android:id="@+id/textBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected items will appear here"
            android:textSize="20sp"
            android:textColor="#555555"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="4dp" />

        <!-- Copy Button -->
        <Button
            android:id="@+id/copyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🐱 ねこ 🐱"
            android:backgroundTint="#673AB7"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>